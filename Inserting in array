#include<iostream>
using namespace std;
void InsertF(int arr[],int Size,int element);
void InsertM(int arr[],int Size,int position,int element);
void InsertL(int arr[],int Size,int Capacity,int element);
int main ()
{
    int Size;
    cout<<"enter the size of array \n";
    cin>>Size;
    int arr[Size];
    cout<<"enter what number of elements do you want to insert Now \n";
    int Sizee;
    cin>>Sizee;
    for(int i=0;i<Sizee;i++)
    {
        cin>>arr[i];
    }
    int element,position;
    cout<<"enter the element do you want to insert in Middle and his position \n";
    cin>>element>>position;
    InsertM(arr,Sizee,position,element);
    Sizee++;
    for(int i=0;i<Sizee;i++)
    {
        cout<<*(arr+i);
    }
    //Insert at last position
    int Capacity=Size;
    int NewElement;
    cout<<"\nenter the element that you want to put it in last \n";
    cin>>NewElement;
    InsertL(arr,Sizee,Capacity,NewElement);
    Sizee++;
    for(int i=0;i<Sizee;i++)
    {
        cout<<*(i+arr);
    }
    return 0;
}
void InsertF(int arr[],int Size,int element)
{
    for(int i=Size-1;i>=0;i--)
    {
        arr[i+1]=arr[i];
    }
    arr[0]=element;
}
void InsertM(int arr[],int Size,int position,int element)
{
    for(int i=Size-1;i>=position;i--)
    {
        arr[i+1]=arr[i];
    }
    arr[position]=element;
}
void InsertL(int arr[],int Size,int Capacity,int element)
{
    if(Capacity>Size)
    {
        arr[Size]=element;
    }
}
